<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableStart="@drawable/ic_dashboard"
            android:text="Dashboard"
            android:padding="7dp"
            android:id="@+id/txt_dashboard"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableStart="@drawable/ic_dashboard"
            android:text="Inventory"
            android:padding="7dp"
            android:id="@+id/txt_inventory"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableStart="@drawable/ic_dashboard"
            android:text="Products"
            android:padding="7dp"
            android:id="@+id/txt_products"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableStart="@drawable/ic_dashboard"
            android:text="Purchase Order"
            android:padding="7dp"
            android:id="@+id/txt_purchase_order"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableStart="@drawable/ic_dashboard"
            android:text="Invoices"
            android:padding="7dp"
            android:id="@+id/txt_invoices"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableStart="@drawable/ic_dashboard"
            android:text="Reports"
            android:padding="7dp"
            android:id="@+id/txt_reports"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableStart="@drawable/ic_dashboard"
            android:text="Logout"
            android:padding="7dp"
            android:id="@+id/txt_logout"/>

    </LinearLayout>

</RelativeLayout>